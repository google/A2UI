{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "steps/**/*",
    "services/**/*",
    "types.d.ts",
    "motia.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

